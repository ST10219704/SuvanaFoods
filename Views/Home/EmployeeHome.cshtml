@{
    ViewData["Title"] = "Employee Dashboard";  // Title for this specific page
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet"> <!-- Link to Google Fonts -->

<div class="employee-dashboard">
    <div class="sidebar" id="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="@Url.Action("Index", "Dashboard")">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#">
                    <i class="fas fa-list"></i>
                    <span>Categories</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#">
                    <i class="fas fa-box"></i>
                    <span>Products</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#">
                    <i class="fas fa-shipping-fast"></i>
                    <span>Update Status</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#">
                    <i class="fas fa-envelope"></i>
                    <span>Contact</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#">
                    <i class="fas fa-chart-bar"></i>
                    <span>Reports</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="toggle-btn" id="toggle-btn">
        <i class="fas fa-bars"></i>
    </div>

    <div class="content">
        <h1>Welcome to the Admin Dashboard</h1>
        <p>This is where employees can manage their operations.</p>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('toggle-btn');
    toggleBtn.addEventListener('click', function () {
        sidebar.classList.toggle('collapsed');
    });
</script>

<style>
    body {
        display: flex;
        height: 100vh;
        overflow: hidden;
        background-color: #f0f0f0; /* Light gray background */
        font-family: 'Poppins', sans-serif; /* Apply custom font */
    }

    .sidebar {
        height: calc(100% - 50px); /* Adjust height to account for the top navbar */
        background-color: #343a40;
        min-width: 250px;
        max-width: 250px;
        transition: all 0.3s ease;
        position: fixed; /* Sidebar docked to the left */
        left: 0;
        top: 75px; /* Push the sidebar down by 50px to avoid navbar collision */
        bottom: 0;
        overflow-y: auto; /* Allow vertical scrolling if needed */
    }

        .sidebar .nav-item {
            padding: 15px;
        }

            .sidebar .nav-item a {
                color: #fff;
                text-decoration: none;
            }

                .sidebar .nav-item a:hover {
                    background-color: #495057;
                    border-radius: 5px;
                }

        .sidebar.collapsed {
            min-width: 80px;
            max-width: 80px;
        }

    .content {
        margin-left: 250px; /* Adjust margin to avoid overlap with the sidebar */
        flex-grow: 1;
        padding: 20px;
        text-align: center; /* Center the text */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

        .content h1 {
            margin-top: 50px; /* Push content slightly down */
            font-weight: 600;
            font-size: 2.5rem;
            color: #333;
        }

        .content p {
            font-size: 1.2rem;
            color: #666;
        }

    .toggle-btn {
        position: absolute;
        top: 10px;
        left: 250px;
        cursor: pointer;
    }

    .sidebar.collapsed + .toggle-btn {
        left: 80px;
    }

    .sidebar.collapsed .nav-item a {
        text-align: center;
    }

    .sidebar.collapsed .nav-item span {
        display: none;
    }

    .nav-item i {
        margin-right: 10px;
    }
</style>
