@model List<SuvanaFoods.Models.DailyIncomeViewModel>

<h2>Daily Income Report</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Order No</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dailyIncome in Model)
        {
            <tr>
                <td rowspan="@dailyIncome.Orders.Count + 1">@dailyIncome.Date.ToString("yyyy-MM-dd")</td>
                @if (dailyIncome.Orders.Count > 0)
                {
                    <td>@dailyIncome.Orders[0].OrderNo</td>
                    <td>@dailyIncome.Orders[0].Total.ToString("C")</td>
                }
            </tr>

            @for (int i = 1; i < dailyIncome.Orders.Count; i++)
            {
                <tr>
                    <td>@dailyIncome.Orders[i].OrderNo</td>
                    <td>@dailyIncome.Orders[i].Total.ToString("C")</td>
                </tr>
            }

            <tr>
                <td colspan="2" class="text-end"><strong>Daily Total:</strong></td>
                <td><strong>@dailyIncome.DailyTotal.ToString("C")</strong></td>
            </tr>
        }
    </tbody>
</table>
